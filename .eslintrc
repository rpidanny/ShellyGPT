{
  "extends": ["@rpidanny/eslint-config-typescript", "plugin:react/recommended"],
  "plugins": ["react"],
  "rules": {
    // increase the severity of rules so they are auto-fixable
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "arrow-parens": "off"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "tsx": true
    }
  }
}
